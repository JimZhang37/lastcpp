{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Full Reset & Build",
            "type": "shell",
            "command": "cmake --build build",
            "dependsOn": [
                "CMake Configure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake -S . -B build -G Ninja -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_CXX_SCAN_FOR_MODULES=ON -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "dependsOn": [
                "Nuke Build Folder"
            ]
        },
        {
            "label": "Nuke Build Folder",
            "type": "shell",
            "command": "rm -rf build"
        },
        {
            "label": "Run My Program",
            "type": "shell",
            "command": "./build/lastcpp",
            "dependsOn": [
                "Full Reset & Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}